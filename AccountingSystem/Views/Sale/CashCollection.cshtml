            $('#radios').on('click', 'div.payment_div', function () {
                $("#radios div.payment_div").css('background', '').css('color', '');
                $("#radios legend").css('color', '');
                $("#radios fieldset").css('color', '').hide();
                $(this).css('background', '#006699').css('color', 'white');
                if ($(this).data('value') == "2" || $(this).data('value') == "3") {
                    $(this).find('fieldset').css('color', 'white').show();
                    $(this).find('legend').css('color', 'white');
                }
                $("#payment").val($(this).data('value'));
                $("#paymentId").val($(this).data('id'));
            });
            $("#refresh").on('click', function () {
                alert($("#payment").val());
            });
