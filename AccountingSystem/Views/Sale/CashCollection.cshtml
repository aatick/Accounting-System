            function fillTable(id) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetCashCollection", "Sale")',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify({ id: id }),
                    success: function (data) {
                        $("#table tbody").html('');
                        var count = 0;
                        var total = 0.00;
                        $.each(data, function (key, value) {
                            count++;
                            var post = value.Posted == true ? 'Yes' : 'No';
                            if (value.BadDebt == true)
                                $("#table tbody").append('<tr style="background: #FF8080;"><td>' + count + '</td><td>Tk. ' + parseFloat(value.Cash).toFixed(2) + '</td><td>Tk. ' + parseFloat(value.SalesTax).toFixed(2) + '</td><td>' + value.ReceivedDate + '</td><td>' + post + '</td><td hidden>' + value.Id + '</td><td hidden>' + value.PaymentType + '</td><td hidden>' + value.BankId + '</td><td hidden>' + value.BadDebt + '</td><td hidden>' + value.ChequeDetails + '</td></tr>');
                            else
                                $("#table tbody").append('<tr><td>' + count + '</td><td>Tk. ' + parseFloat(value.Cash).toFixed(2) + '</td><td>Tk. ' + parseFloat(value.SalesTax).toFixed(2) + '</td><td>' + value.ReceivedDate + '</td><td>' + post + '</td><td hidden>' + value.Id + '</td><td hidden>' + value.PaymentType + '</td><td hidden>' + value.BankId + '</td><td hidden>' + value.BadDebt + '</td><td hidden>' + value.ChequeDetails + '</td></tr>');
                            total += (parseFloat(value.Cash) + parseFloat(value.SalesTax));
                        });
                        if (count < 4) {
                            for (var i = 1; i <= 4 - count; i++) {
                                $("#table tbody").append('<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>');
                            }
                        }
                        $("#accountReceivable").val(parseFloat(parseFloat($("#salesList option:selected").data('amount')) - total).toFixed(2));
                        $("#amount").val(parseFloat(parseFloat($("#salesList option:selected").data('amount')) - total).toFixed(2));
