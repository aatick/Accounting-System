            function getInvoices() {
                sl = 0;
                var str;
                if ($('#due').is(':checked') && !$("#paid").is(':checked'))
                    str = "" + $("#companyList").val() + ", 0, 0";
                else if (!$('#due').is(':checked') && $("#paid").is(':checked'))
                    str = "" + $("#companyList").val() + ", 1";
                else if ($('#due').is(':checked') && $("#paid").is(':checked'))
                    str = "" + $("#companyList").val() + ", null, 0";
                else
                    str = "";
                if (str != "") {
                    sl = 0;
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetInvoicesForCashCollection", "Sale")',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: JSON.stringify({ query: str }),
                        success: function (data) {
                            invoices = [];
                            $.each(data, function (key, value) {
                                invoices.push({ Id: value.Id, InvoiceNo: value.InvoiceNo, TAmount: value.TAmount, FullPayment: value.FullPayment, PostedNature: value.PostedNature, UploadedPaymentStatus: value.UploadedPaymentStatus });
                            });
                            fillInvoices(invoices);
                        },
                    });
                } else {
                    $("#invoices tbody").html('');
                    for (var i = 1; i <= 4; i++) {
                        $("#invoices tbody").append('<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>');
                    }
                }
            }

            function fillInvoices(list) {
                $("#invoices tbody").html('');
                var count = 0;
                $.each(list, function () {
                    count++;
                    $("#invoices tbody").append('<tr><td>' + count + '</td><td>' + this.InvoiceNo + '</td><td>' + parseFloat(this.TAmount).toFixed(2) + '</td><td>' + this.UploadedPaymentStatus + '</td><td hidden>' + this.Id + '</td></tr>');
                });
                if (count < 4) {
                    for (var j = 1; j <= 4 - count; j++) {
                        $("#invoices tbody").append('<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>');
                    }
                }
                $("#salesList").html('');
                $("#table tbody").html('');
                for (var i = 1; i <= 4; i++) {
                    $("#table tbody").append('<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>');
                }
                $("#update, #insert, #unpaid").prop('disabled', true);
            }
