            function loadModal() {
                $("#success").modal({
                    backdrop: 'static',
                    keyboard: false
                });
                $('#anotherModal').modal({
                    backdrop: 'static',
                    keyboard: false
                });
                $("#anotherModal").modal('hide');
            }
            var enforceModalFocusFn = $.fn.modal.Constructor.prototype.enforceFocus;

